@model IEnumerable<DDAC_MVC_.Models.User>
@{
    ViewData["Title"] = "Staff Records";
}

<link rel="stylesheet" href="~/css/modal.css" />
<link rel="stylesheet" href="~/css/table.css" />
<div id="addmodal" class="modal">
    <div class="modal-content">
        <form id="myForm" class="form-container" action="/login">
            <h3>Sign Up</h3>
            <div class="form-group">
                <label for="fullName">Full Name</label>
                <input type="text" name="FullName" class="form-control" id="FullName" aria-describedby="fullNameHelp" placeholder="Enter your full name">
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="Email" class="form-control" id="Email" aria-describedby="emailHelp" placeholder="Enter your email address">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="username">Username</label>
                <input type="text" name="Username" class="form-control" id="Username" aria-describedby="usernameHelp" placeholder="Enter your desired username">
            </div>
            <div class="form-group">
                <label for="inputPassword">Password</label>
                <input type="password" name="Password" class="form-control" id="Password" placeholder="Password">
            </div>
            <button id="buttonSubmit" type="submit" class="btn btn-primary btn-block">Add Staff</button>
            <button id="cancelbtn" class="btn-danger">Cancel</button>
        </form>
        @*<div id="btncollection">
            <button id="submitbtn" class="btn-success"><i class="bi bi-save-fill"></i>Add</button>
            <button id="cancelbtn" class="btn-danger">Cancel</button>
        </div>*@
    </div>
</div>
<div id="content">
    <h1>@ViewData["Title"]</h1>
    <button class="addbtn btn-primary">Add Staff</button>
    <div>
        <table class="table table-hover table-light table-borderless">
            <thead class="thead-dark">
                <tr>
                    <th>Staff ID</th>
                    <th>Staff Fullname</th>
                    <th>Staff Username</th>
                    <th>Staff Password</th>
                    <th>Staff Email</th>
                    <th>Type</th>
                    <th colspan="1">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Username</td>
                    <td>@item.Password</td>
                    <td>@item.Email</td>
                    <td>@item.Type</td>
                    @*<td><button id="@item.Id" class="edit btn-warning"><i class="bi bi-pencil-square"></i>Edit</button></td>*@
                    <td><button id="@item.Id" class="remove btn-danger"><i class="bi bi-x-lg"></i>Remove</button></td>

                </tr>
                    }

                }
            </tbody>

        </table>
    </div>


</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    $(".addbtn").on("click", function () {
        $("#addmodal").fadeIn(200);

    })
    $("#cancelbtn").on("click", function () {
        $("#addmodal").fadeOut(100);

    })


</script>
