@model IEnumerable<DDAC_MVC_.Models.User>
@{
    ViewData["Title"] = "User Records";
}

<link rel="stylesheet" href="~/css/modal.css" />
<link rel="stylesheet" href="~/css/table.css" />

<div id="content">
    <h1>@ViewData["Title"]</h1>
    <div>
        <table class="table table-hover table-light table-borderless">
            <thead class="thead-dark">
                <tr>
                    <th>User ID</th>
                    <th>User Fullname</th>
                    <th>User Username</th>
                    <th>User Password</th>
                    <th>User Email</th>
                    <th>Type</th>
                    <th colspan="1">Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    @foreach (var item in Model)
                    {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FullName</td>
                    <td>@item.Username</td>
                    <td>@item.Password</td>
                    <td>@item.Email</td>
                    <td>@item.Type</td>
                    @*<td><button id="@item.Id" class="edit btn-warning"><i class="bi bi-pencil-square"></i>Edit</button></td>*@
                    <td><button id="@item.Id" class="remove btn-danger"><i class="bi bi-x-lg"></i>Remove</button></td>

                </tr>
                    }

                }
            </tbody>

        </table>
    </div>


</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
